<html lang="ja">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>歴代メンバー</title>

    <script>
      function search() {
	fetch('/search', {
	  method: 'POST',
	  headers: {
	    "Content-Type": "application/json; charset=utf-8",
	  },
	  body: JSON.stringify({
	    name: $("#name").val(),
	    title: $("#title").val(),
	    url: $("#url").val(),
	    since: $("#since").val(),
	    until: $("#until").val(),
	  }),
	}).then(
	  resp => resp.json()
	).then(data => {
	  console.log("remove");
	  $('#members tbody tr').remove();
	  data.data.forEach(row => {
	    $('#members tbody').append(
	      $('<tr></tr>')
	      .append($('<td></td>').text(row.name))
	      .append($('<td></td>').text(row.year))
	      .append(
		$('<td></td>').append($('<a>', {href: row.url, text: row.title}))
	      )
	    )
	  });
	});
	return false;
      }
    </script>
  </head>

  <body>
    <div class="container">
      <div class="jumbotron">
	<h1>歴代メンバー</h1>
	<form onsubmit="event.preventDefault(); return search()">
	  <div class="form-row">
	    <div class="form-group col-md-4">
	      <label for="name">name</label>
	      <input id="name" class="form-control" aria-describedby="nameHelp" placeholder="cookies">
	      <small id="nameHelp" class="form-text">'_' matches any single character, '%' matches any string</small>
	    </div>
	    <div class="form-group col-md-4">
	      <label for="since">since</label>
	      <input id="since" class="form-control" placeholder="1990" value="1990">
	    </div>
	    <div class="form-group col-md-4">
	      <label for="until">until</label>
	      <input id="until" class="form-control" placeholder="2018" value="2018">
	    </div>
	  </div>
	  <div class="form-row">
	    <div class="form-group col-md-6">
	      <label for="title">title</label>
	      <input id="title" class="form-control" aria-describedby="titleHelp" placeholder="cookies">
	      <small id="titleHelp" class="form-text">same as name</small>
	    </div>
	    <div class="form-group col-md-6">
	      <label for="url">url</label>
	      <input id="url" class="form-control" aria-describedby="urlHelp" placeholder="kcz.sh">
	      <small id="urlHelp" class="form-text">same as name</small>
	    </div>
	  </div>

	  <button type="submit" class="btn btn-primary">Search</button>
	  <p><a href="/source">source</a></p>
	</form>
      </div>
      <table id="members" class="table">
	<thead>
	  <tr>
	    <th>name</th>
	    <th>year</th>
	    <th>link</th>
	  </tr>
	</thead>
	<tbody></tbody>
      </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <script>
      search()
    </script>
  </body>
</html>
